QFrame
{
    background-color: transparent;
    border: none;
}

/* Horizontal line.*/
QFrame[frameShape="4"],
QFrame[frameShape="4"]:disabled
{
    margin: 0;
    border: none;
    border-top: 1px solid #252525;
    border-bottom: 1px solid #454545;
    background: #505050;
}

QFrame[frameShape="4"]:disabled
{
    border-top: 1px solid #353535;
    border-bottom: 1px solid #454545;
    background: #404040;
}

QFrame:disabled
{
    background-color: transparent;
    border-color: #151515;
    color: #909090;
}

QScrollArea
{
    background-color: transparent;
    margin-top: 0;
}

QScrollArea > QWidget > QWidget
{
    background-color: transparent;
}

QAbstractScrollArea::corner
{
    background-color: #454545;
}

QStatusBar
{
    background-color: #454545;
}

QGroupBox
{
    font-weight: bold;
    margin: 0px;
    background-color: #303030;
    border-radius: 0;
    padding-bottom: 6px;
    border: none;
}

QGroupBox::title
{
    padding: 0;
    left: 9px;
    top: 9px;
    color: #e0e0e0;
}

QGroupBox:disabled
{
    color: gray;
}

QGroupBox::title:disabled
{
    color: gray;
}

QGroupBox QScrollBar::handle:vertical:disabled,
QGroupBox QScrollBar::handle:horizontal:disabled,
QGroupBox QScrollBar::add-line:disabled,
QGroupBox QScrollBar::sub-line:disabled
{
    border: none;
    background-image: url(:/res/icons/newie/line_pattern.png);
    background-repeat: repeat-xy;
}

QGroupBox > QLabel
{
    margin-top: 0;
    margin-left: 2px;
    margin-right: 3px;
    padding-left: 3px;
    padding-right: 3px;
}

QTreeWidget
{
    margin: 0;
    padding: 0;
    background-color: transparent;
    background-image: url(:/res/icons/newie/line_pattern.png);
    background-repeat: repeat-xy;
    border: 1px solid black;
}

QTreeWidget QAbstractItemView
{
    background-color: transparent;
    margin: 0;
    padding: 0;
}

QTreeWidget QHeaderView
{
    border: none;
    border-bottom: 1px solid black;
}

QTreeWidget QHeaderView::section
{
    padding: 0.25em;
    padding-left: 0.45em;
    margin: 0;
    border: none;
    border-right: 1px solid black;
    background: #525252;
    color: #e0e0e0;
}

QTreeWidget QHeaderView::section:last
{
    border-right: none;
}

QTreeWidget::item
{
    background-color: #404040;
}

QTreeWidget::item:hover
{
    background-color: #4a4a4a;
}

QTreeWidget::item:selected
{
    background-color: #a0a0a0;
}
